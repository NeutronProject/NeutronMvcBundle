{% extends "NeutronAdminBundle::layout.html.twig" %}

{% block javascripts %}
    {{ neutron_append_javascript('bundles/neutronmvc/js/backend/category/index.js') }}
    {{ parent() }}
{% endblock %}

{% block headTitle %} {% trans from "NeutronMvcBundle" %}head_title{% endtrans %} {% endblock %}

{% block headDesc %}
    <h1 class="icon dashboard">
        {% trans from "NeutronlayoutBundle" %}header{% endtrans %} <small>some description</small>
    </h1>
{% endblock %}

{% block body %}
<div class="row">
    <div class="grid12">
        <article class="panel">
            <header class="divider">
         	    <h2>{% trans from "NeutronMvcBundle" %}subheader{% endtrans %}</h2>
         	</header>
         	<div class="grid3">
        		<div class="block">
        		    <h2>{% trans from "NeutronLayoutBundle" %}categories{% endtrans %}</h2>
        			<div class="container">
        			    <div class="body">
        			        {{ neutron_tree(tree) }}
        			    </div>
        			</div>
        		</div>
            </div>
            
            <div class="grid8">
        	    <article class="panel">
        	 	    {{ neutron_datagrid(grid) }}          
        		    </article>
        	    </div>
    	</article>
    </div>
</div>
{% endblock %}