{% extends "NeutronAdminBundle::layout.html.twig" %}

{% block headDesc %}
    <h1 class="icon messages">
        {% trans from "NeutronUserBundle" %}header{% endtrans %} <small>some description</small>
    </h1>
{% endblock %}

{% block body %}
<div class="row">
	<div class="grid12">
		<article class="panel">
		 	<header><h2>Are you sure you want to delete this record?</h2></header>
		 	
            <table class="table">
                <tbody>
                	<tr>
                		<td><strong>{{ 'form.title'|trans({}, 'NeutronPageBundle') }}</strong></td>
                		<td class="actions">{{ record.title }}</td>
                	</tr>
             
                	<tr>
                		<td><strong>{{ 'form.slug'|trans({}, 'NeutronAdminBundle') }}</strong></td>
                		<td class="actions">{{ record.category.slug }}</td>
                    </tr>
   
                	<tr>
                		<td><strong>{{ 'form.enabled'|trans({}, 'NeutronAdminBundle') }}</strong></td>
                		<td class="actions">{{ record.category.enabled|yes_no }}</td>
                    </tr>
                    
                	<tr>
                		<td><strong>{{ 'form.displayed'|trans({}, 'NeutronAdminBundle') }}</strong></td>
                		<td class="actions">{{ record.category.displayed|yes_no }}</td>
                    </tr>
                </tbody>
            </table>
            
            <div style="clear:both"></div>
            
            <div class="actions">
                <div class="controls">
                    <form action="{{ app.request.requestUri }}" method="POST">
                        <button type="submit"  style="float:right; margin:5px;" type="submit" class="btn" name="operation" value="delete">{{ 'page.delete'|trans({}, 'NeutronAdminBundle') }}</button>
                        <a href="{{ path(plugin.administrationRoute) }}" style="float:right; margin:5px;" class="btn action" >{{ 'page.management.back'|trans({}, 'NeutronPageBundle') }}</a>
                        <a href="{{ path('neutron_mvc.category.management') }}" style="float:right; margin:5px;" class="btn action" >{{ 'category.management.back'|trans({}, 'NeutronAdminBundle') }}</a>
                    </form>   
                </div>
            </div> 	
		</article>

	</div>
</div>
{% endblock %}